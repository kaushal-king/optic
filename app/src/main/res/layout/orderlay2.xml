<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginLeft="@dimen/_20sdp"
                android:textStyle="bold"
                android:id="@+id/ped_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TRY000123"
                />
            <TextView
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_alignStart="@+id/ped_id"
                android:layout_below="@+id/ped_id"
                android:id="@+id/ped_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21/07/2020"/>
            <TextView
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_alignStart="@+id/ped_id"
                android:layout_below="@+id/ped_date"
                android:id="@+id/ped_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kaushal Jethava"/>
            <TextView
                android:layout_alignParentRight="true"
                android:layout_alignRight="@+id/ped_id"
                android:id="@+id/ped_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$20"
                android:layout_marginRight="@dimen/_20sdp"
                android:textColor="#07790A"/>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>